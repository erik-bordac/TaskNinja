@page
@model TaskNinja.Pages.TeamsManager.CreateModel

@{
    ViewData["Title"] = "Create Team";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container _bg-light p-3">
    <h1 class="text-center">Create new team</h1>
    <div class="row justify-content-center">
        <div class="col-md-4 mx-auto">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Team.Name" class="control-label"></label>
                    <input asp-for="Team.Name" class="form-control" />
                    <span asp-validation-for="Team.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

