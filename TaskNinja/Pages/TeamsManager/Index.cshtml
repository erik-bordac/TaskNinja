@page
@model TaskNinja.Pages.TeamsManager.IndexModel
@{
}

@{
    ViewData["Title"] = "Teams";
}

<div class="container _bg-light">
    <h1 class="text-center">My Teams</h>
    <div class="row justify-content-center">
    @foreach(var team in Model.MyTeams)
    {
    <div class="col-md-3 d-flex justify-content-center">
        <div class="card text-white bg-primary m-3 hover-anim" style="width: 13rem;">
            <a asp-page="./TeamDetails" asp-route-teamId="@team.Id" class="text-white link-underline-primary">
                <div class="card-body" style="
                      background: linear-gradient(
                        45deg,
                        hsla(168, 85%, 52%, 0.5),
                        hsla(263, 88%, 45%, 0.5) 100%
                      );">

                    <h4 class="card-title">@team.Name</h4>
                    <img src="~/people-fill.svg" alt="checklist image" width="80%" class="m-3 text-primary" />
                </div>
            </a>
        </div>
    </div>
    }

@*         Create Team btn *@        
        <div class="col-md-3 d-flex justify-content-center">
            <div class="card text-white bg-primary m-3 hover-anim" style="width: 13rem;">
                <a asp-page="/TeamsManager/Create" class="text-white link-underline-primary">
                    <div class="card-body" style="
                          background: linear-gradient(
                            45deg,
                            hsla(168, 85%, 52%, 0.5),
                            hsla(263, 88%, 45%, 0.5) 100%
                          );">

                        <h4 class="card-title">Create Team</h4>
                        <img src="~/plus-square.svg" alt="checklist image" width="80%" class="m-3 text-primary" style="padding: 10%;"/>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-anim:hover {
        transform: scale(1.05);
        cursor: pointer;
        filter: hue-rotate(90deg);
    }
</style>
